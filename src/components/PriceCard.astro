---
const { tier } = Astro.props;

let blurb, price;
let features: any[] = [];

switch (tier) {
  case "Basic":
    blurb = "A simple one-page card for content and social links.";
    price = "$25";
    features = [
      "One static page",
      "Perfect for personal use",
      "Social links",
      "Custom design",
      "Made to your specifications",
      "2-5 day delivery",
    ];
    break;

  case "Standard":
    blurb =
      "Multi-page or multi-section static website for individuals or businesses.";
    price = "$50";
    features = [
      "Up to 5 pages or sections",
      "Perfect for personal or business use",
      "Can include marketing, content, and CTA sections",
      "Custom design",
      "Made to your specifications",
      "3-5 day delivery",
    ];
    break;

  case "Premium":
    blurb =
      "A fully custom hosted website with server-sided rendering and actions.";
    price = "$80+";
    features = [
      "Multiple pages",
      "Perfect for business use",
      "Can include marketing, content, and CTA sections",
      "Can include complex forms and conditional logic",
      "Custom design",
      "Made to your specifications",
      "7+ day delivery (depending on complexity)",
    ];
    break;

  default:
    blurb = "N/A";
    price = "N/A";
    features = [];
}
---

<div class="w-1/3 p-8 rounded-xl bg-slate-800 space-y-5 flex flex-col">
  <h3 class="font-semibold">{tier}</h3>
  <p>{blurb}</p>
  <div>
    <span class="text-5xl font-bold">{price}</span>
    <span class="text-sm font-semibold">USD</span>
  </div>
  <ul>
    {
      features?.map((feature) => (
        <li class="flex gap-x-3">
          <svg
            class="h-6 w-5 flex-none text-[#e7da48]"
            viewBox="0 0 20 20"
            fill="currentColor"
            aria-hidden="true"
          >
            <path
              fill-rule="evenodd"
              d="M16.704 4.153a.75.75 0 01.143 1.052l-8 10.5a.75.75 0 01-1.127.075l-4.5-4.5a.75.75 0 011.06-1.06l3.894 3.893 7.48-9.817a.75.75 0 011.05-.143z"
              clip-rule="evenodd"
            />
          </svg>
          {feature}
        </li>
      ))
    }
  </ul>
  <a
    href="#quote"
    class="block w-full rounded-md bg-[#e7da48] px-3 py-2 text-center text-sm font-semibold text-black shadow-sm hover:bg-yellow-500 focus:outline focus:outline-2 focus:outline-offset-2 focus:outline-yellow-200"
    >Contact for a quote</a
  >
</div>
