---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { getCollection } from "astro:content";
---

<script>
  let cookie = document.cookie;

  if (cookie.includes("nsfw=true")) {
    window.location.href = "/nsfw/oc";
  }
</script>

<script is:inline>
  function setCookie() {
    document.cookie = "nsfw=true";
    window.location.href = "/nsfw/oc";
  }
</script>

<BaseLayout title="NootSponge - NSFW">
  <div
    class="bg-gradient-to-r from-[#5a2fc2] to-[#834dc1] text-white flex h-screen w-full items-center justify-center flex-col"
  >
    <span class="text-6xl font-bold text-[#e7da48]">
      YOU ARE ABOUT TO ENTER A NSFW PAGE
    </span>
    <a href="/" class="mt-1 hover:text-[#e7da48]">Go back.</a>
    <a href="#" onclick="setCookie()" class="mt-1 hover:text-[#e7da48]"
      >Go forward.</a
    >
  </div>
</BaseLayout>
